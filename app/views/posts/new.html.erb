<h1 class="display-5 mb-4">New Post</h1>

<%= form_with :model => @post do |form| %>
  <p>
    <%= form.label "title" %>
    <%= form.text_field "title", :class => "form-control" %>
  </p>
  <p>
    <%= form.label "description" %>
    <%= form.text_field "description", :class => "form-control" %>
  </p>
  <p>
    <%= form.label "posted_on" %>
    <%= form.date_field "posted_on", :class => "form-control" %>
  </p>
  <p>
    <%= form.label "uploaded_image", :class => "form-label" %>
    <%= form.file_field "uploaded_image", :accept => "image/jpeg, image/jpg, image/png, image/gif", :class => "form-control" %>
  </p>
  <p>
    <%= form.submit "Submit", :class => "btn btn-success"%>
  </p>
  <%= form.hidden_field "place_id" %>
<% end %>
