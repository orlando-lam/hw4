<h1 class="display-4 mb-4"><%= @place["name"] %></h1>

<% if @current_user %>
  
  <p>
    <a class= "btn btn-primary btn-sm mt-2" href="/posts/new?place_id=<%= @place["id"] %>">New Post</a>
  </p>

  <h2>My Posts</h2>
  <div class="row">
    <% for post in @posts %>
      <div class="col-md-3">
        <h3><%= post["title"] %></h3>
        <h4><%= post["posted_on"] %></h4>
        <p><%= post["description"] %></p>
      </div>
    <% end %>
  </div>


<% end %>

<p>
  <a href="/places">Back to All Places</a>
</p>